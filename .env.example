# ============================================
# GLOBAL ENVIRONMENT CONFIGURATION
# PersonaPilot - Complete Auth System
# ============================================

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:5000

# ============================================
# FRONTEND CONFIGURATION (VITE)
# ============================================
VITE_API_URL=http://localhost:5000
VITE_API_BASE_URL=http://localhost:5000/api
VITE_APP_NAME=PersonaPilot
VITE_APP_URL=http://localhost:5173
VITE_NODE_ENV=development

# OAuth URLs (Frontend)
VITE_GOOGLE_AUTH_URL=http://localhost:5000/api/auth/google
VITE_LINKEDIN_AUTH_URL=http://localhost:5000/api/auth/linkedin

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_LINKEDIN_AUTH=true
VITE_ENABLE_EMAIL_AUTH=true

# Analytics (Optional)
VITE_GA_TRACKING_ID=
VITE_HOTJAR_ID=

# ============================================
# DATABASE
# ============================================
MONGODB_URI=mongodb://localhost:27017/personapilot

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-token-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# ============================================
# OAUTH AUTHENTICATION (Login/Signup)
# ============================================

# Google OAuth - For User Authentication
# Get credentials: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# LinkedIn OAuth - For User Authentication
# Get credentials: https://www.linkedin.com/developers/apps
LINKEDIN_AUTH_CLIENT_ID=your-linkedin-auth-client-id
LINKEDIN_AUTH_CLIENT_SECRET=your-linkedin-auth-client-secret
LINKEDIN_AUTH_CALLBACK_URL=http://localhost:5000/api/auth/linkedin/callback

# ============================================
# SOCIAL MEDIA CONNECTIONS (Dashboard)
# ============================================

# Twitter/X API - For posting content
# Get credentials: https://developer.twitter.com/en/portal/dashboard
TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_CALLBACK_URL=http://localhost:5000/api/connections/twitter/callback

# LinkedIn API - For posting content
# Get credentials: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:5000/api/connections/linkedin/callback

# ============================================
# AI & SERVICES
# ============================================

# Google Gemini AI
# Get API key: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Redis (for caching & sessions)
REDIS_URL=redis://localhost:6379

# ============================================
# PAYMENT & BILLING
# ============================================

# Razorpay
# Get credentials: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# ============================================
# FILE STORAGE
# ============================================

# Cloudinary (for image uploads)
# Get credentials: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# EMAIL SERVICE
# ============================================

# SMTP Configuration (Gmail example)
# For Gmail: Enable 2FA and create App Password
# https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-gmail-app-password
EMAIL_FROM=PersonaPilot <noreply@personapilot.io>

# ============================================
# SECURITY & RATE LIMITING
# ============================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production-min-32-chars
SESSION_COOKIE_MAX_AGE=86400000

# CORS
CORS_ORIGIN=http://localhost:5173

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. For production, use environment variables from your hosting provider
# 4. Generate secure secrets: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
